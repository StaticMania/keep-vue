{
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "baseUrl": ".",
    "outDir": "./lib",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.css",
    "src/**/*.vue"
  ],
  "exclude": ["node_modules", "**/node_modules", "docs", "dist"]
}
